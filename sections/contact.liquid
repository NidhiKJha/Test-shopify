<section class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="content">
            <h1 class="page-name">Contact</h1>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Contact</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="contact section">
    <div class="container">
      <div class="row">
        <div class="contact-form col-md-6 ">
         
          {%form 'contact'%}
          {%if form.posted_successfully? %}
          <p>successfully submitted</p>
          {%endif%}
            <div class="form-group">
              <input type="text" placeholder="Your Name" class="form-control" name="contact[name]" id="name">
            </div>
            
            <div class="form-group">
              <input type="email" placeholder="Your Email" class="form-control" name="contact[email]" id="email">
            </div>
            
            <div class="form-group">
              <input type="text" placeholder="Subject" class="form-control" name="contact[subject]" id="subject">
            </div>
            
            <div class="form-group">
              <textarea rows="6" placeholder="Message" class="form-control" name="contact[message]" id="message"></textarea> 
            </div>

            <div>
              <input type="submit" id="contact-submit" class="btn btn-transparent" value="Submit">
            </div>
            {%endform%}
        </div>

        <div class="contact-details col-md-6 ">
          <ul class="contact-short-info list-unstyled">
          {% if section.settings.address !=blank %}
            <li>
              <i class="fa fa-home"></i>
              <span>{{section.settings.address}}</span>
            </li>
            {% endif %}
          {% if section.settings.phone !=blank %}

            <li>
              <i class="fa fa-mobile"></i>
              <span>{{section.settings.phone}}</span>
            {% endif %}
          {% if section.settings.email !=blank %}

            <li>
              <i class="fa fa-fax"></i>
              <span>{{section.settings.email}}</span>
             {% endif %}
          {% if section.settings.fax !=blank %}

            <li>
              <i class="fa fa-envelope-o"></i>
              <span>{{section.settings.fax}}</span>
            {% endif %}
          </ul>
          <div class="social-icon">
            <ul>
              <li><a class="fb-icon" href="#"><i class="fa fa-facebook"></i></a></li>
              <li><a href="#"><i class="fa fa-twitter"></i></a></li>
              <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
              <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
              <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  {% schema %}
    {
    "name": "Fingerlakes",
    "settings": [
            {
                "type":"text",
                "id":"address",
                "label":"address"
            },
             {
                "type":"text",
                "id":"phone",
                "label":"phone number"
            },
             {
                "type":"text",
                "id":"email",
                "label":"email Id"
            },
             {
                "type":"text",
                "id":"fax",
                "label":"fax number"
            }
                ]
    }
{% endschema %}