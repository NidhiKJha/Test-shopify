    .mission-content-row {
    display: flex;
    overflow: hidden;
    border-bottom: 2px solid #d3d3d3;
    margin-left: 20px;
    margin-right: 20px;
    padding: 10px;
    }

  .mission-content {
            font-family: AvenirBook;
            color: black;
            opacity: 100%;
            font-size: 18px;
            text-align: left;
            line-height: 28px;
        }

        .our-mission-category-box {
            height: 600px;
            margin-left: 100px;
        }

        .our-vision-img-responsive {
            z-index: -1;
            height: 600px !important;
        }

        .our-mission-col-xs-3 {
            width: 25%;
            margin-left: 30px;
            padding: 0 5px;
            padding-top: 20px !important;
            overflow: hidden;
        }

        .our-mission-col-xs-9 {
            width: 100%;
            padding: 0 5px;
            padding-top: 20px !important;
            float: right;
            text-align: left;
            margin-left:150px;
        }

        #image-text-box {
            position: relative;
        }

        .img-fluid {
            position: absolute;
            z-index: 0;
            width:400px;
        }

        .hello-text {
            position: absolute;
            z-index: 1;
            left:-1px;
            margin-left:40px;
            margin-top:40px;
            background: none;
            border: none;
            cursor: pointer;
        }

        #text-1 {
            top: 180px;
        }

        #text-2 {
            top: 250px;
        }

        @media screen and (max-width: 800px) {
    .our-mission-col-xs-9 {
        display: none;
    }
    .our-mission-col-xs-3 {
        width: 100%;
    }
    .comment_one img {
        width: 100%;
    }
}